<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/edittext_default_bg"
    tools:context="com.example.yasina.llapp.Train.MenuTrainActivity">

        <TextView
            android:id="@+id/etChooseTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:ems="9"
            android:hint="Choose your theme"
            android:textSize="15dp"></TextView>

        <Spinner
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/spinnerOfThemes"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/etAdd_new_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:ems="9"
            android:hint=" or Add New Theme"
            android:textSize="15dp"></TextView>

        <ImageButton
            android:id="@+id/ibAdd_newTheme"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/add"
            android:onClick="onClick"
            android:layout_marginLeft="60dp" />
        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmSet"
        android:onClick="onClick"
        android:text="Alarm"
        android:background="#ebaa5b"/>

    <Button
        android:id="@+id/ibNext"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Train"
        android:onClick="onClick"
        android:background="#ebaa5b"
  />

    <Button
        android:id="@+id/ibTestTrain"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test"
        android:onClick="onClick"
        android:background="#ebaa5b"
        />

    <Button
        android:id="@+id/ibTrainDelete"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Theme"
        android:onClick="onClick"
        android:background="#ebaa5b"
        />



</LinearLayout>
