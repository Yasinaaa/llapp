<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pro.vylgin.app.MainActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:id="@+id/ll1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivUser"
            android:src="@drawable/user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="140dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="160dp"
            android:hint="Login"
            android:ems="5"
            android:textSize="13dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/etLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="0dp"
            android:padding="7dp"
            android:ems="9"
            android:hint="Languages"
            android:textSize="13dp"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerLeanLang"
            android:layout_marginTop="180dp"
            android:padding="1dp"
            android:textSize="1dp"
            android:layout_marginLeft="0dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/etSelfEducated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="0dp"
            android:padding="7dp"
            android:ems="9"
            android:hint="Words Theme"
            android:textSize="13dp"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerWordsTheme"
            android:layout_marginTop="240dp"
            android:padding="1dp"
            android:textSize="1dp"
            android:layout_marginLeft="0dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnSingIn"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:padding="9dp"
        android:text="Train"
        android:background="#ebaa5b"/>


</FrameLayout>