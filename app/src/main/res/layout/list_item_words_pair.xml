<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_id="@+id/ll1_l_i_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_firstLanguage_list_item_wp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="First Language "
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" - "
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_secondLanguage_list_item_wp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Second Language"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@android:color/black" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1_l_i_w"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/txt_word_list_item_wp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Word"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@android:color/black" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            >

            <TextView
                android:id="@+id/txt_explanation_item_wp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Explanation"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@android:color/black" />

        </LinearLayout>


        <ImageView
            android:id="@+id/ivPicture_list_item_wp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/paint"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="300dp"
            android:layout_weight="4"
            />


    </RelativeLayout>

</ScrollView>